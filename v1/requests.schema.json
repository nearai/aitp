{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "anyOf": [
      {
        "type": "object",
        "properties": {
          "request_decision": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "product"
                ]
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "image_url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "object",
                      "properties": {
                        "usd": {
                          "type": "number"
                        }
                      }
                    },
                    "url": {
                      "type": "string",
                      "format": "uri"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "price",
                    "url"
                  ]
                }
              }
            },
            "required": [
              "type",
              "options"
            ]
          }
        },
        "required": [
          "request_choice"
        ]
      }
    ]
  }
}